html,body{
    margin: 0%;
    padding: 0%;
    width: 100%;
    height: 100%;
}

/*diseño contenedor base*/
#contenedor{
    margin: 0%;
    width: 100%;
    height: 100%;
    background-color: teal;
}

#contenedor h1{
    margin: auto;
    font-size: 30px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-style: italic;
    font-weight: bold;
    text-align: center;
    text-decoration: underline;
    color: black;
}

#btnModal{
    margin: auto;
    margin-top: 20px;
    margin-left: 20px;
    font-size: 30px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-weight: bold;
    cursor: pointer;
}

#contenedor footer{
    margin-top: 450px;
}

footer a{
    font-size: 15px;
    align-items: center;
}

/*diseño acciones en los click*/
div#contenedor{
    opacity: 1;
    pointer-events: auto;
}

div#contenedor.contDesactivo{
    opacity: 0.3;
    pointer-events: none;
}

div#modal{
    position: fixed;
    top: 30%;
    left: 25%;
    visibility: hidden;
    width: 50%;
    height: 50%;
}

div#modal.modalActiva{
    visibility: visible;
}

div#modal.modalDesactivo{
    visibility: hidden;
}

div#modal.contActivo{
    opacity: 1;
    pointer-events: auto;
}

/*diseño modal*/
#modal{
    border: solid 3px black;
    border-radius: 24px;
}

.cabecera{
    margin: auto;
    height: 10%;
    background-color: teal;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
}

.cabecera header{
    width: 94%;
    text-align: center;
    text-decoration: underline;
    font-size: 15px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-weight: bold;
    box-sizing: border-box;
    padding-top: 5px;
    float: left;
}

.cabecera button{
    width: 6%;
    height: 100%;
    color: whitesmoke;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-weight: bold;
    background-color: red;
    border: solid 1px black;
    cursor: pointer;
    border-top-right-radius: 20px;
}

.formulario{
    margin: auto;
    height: 80%;
    background-color: whitesmoke;
}

footer{
    margin: auto;
    height: 10%;
    background-color: teal;
    text-align: center;
    font-size: 15px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-weight: bold;
    box-sizing: border-box;
    padding-top: 5px;
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
}

.formulario form{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    padding-top: 10px;
    padding-left: 10px;
}

.formulario form .formInternos{
    max-width: 100%;
    width: 30%;
    max-height: 100%;
    height: 100px;
}

.formulario form .formInternos label{
    font-size: 15px;
    font-weight: bold;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.formulario form .formInternos input , .formulario form .formInternos select{
    height: 30px;
    box-sizing: border-box;
    margin-top: 10px;
    background-color: teal;
    font-size: 15px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-style: italic;
    color: whitesmoke;
}

.formulario form .formInternos #enviar{
    height: 30px;
    margin-top: -10px;
    margin-left: 70px;
    cursor: pointer;
}



<div id="modal">
        <div class="cabecera">
            <header>Formulario de alta de Jugadores - MASTER Jugadores</header>
            <button id="cerrar">X</button>
        </div>
        <div class="formulario">
            <form action="./Respuesta.html" method="GET" id="form">
                <div class="formInternos">
                    <label for="codjug">Codigo Jugador:</label><br>
                    <input type="text" name="codjug" id="codjug" required>
                </div>
                <div class="formInternos">
                    <label for="nombre">Nombre Completo:</label><br>
                    <input type="text" name="nombrejug" id="nombre" required>
                </div>
                <div class="formInternos">
                    <label for="nac">Fecha de Nacimiento:</label><br>
                    <input type="date" name="nacimiento" id="nac" required>
                </div>
                <div class="formInternos">
                    <label for="posicion">Posicion:</label><br>
                    <input type="text" name="pos" id="posicion" required>
                </div>
                <div class="formInternos">
                    <label for="equipo">Equipo:</label><br>
                    <select name="equipo" id="equipo" required></select>
                </div>
                <div class="formInternos">
                    <label for="edad">Edad:</label><br>
                    <input type="number" min="18" name="edad" id="edad" required>
                </div>
                <div class="formInternos">
                    <input type="submit" name="" id="enviar" value="Enviar">
                </div>
            </form>
        </div>    
        <footer>Pie del formulario</footer>
    </div>